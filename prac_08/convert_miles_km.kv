BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            multiline: False
            on_text: app.handle_calculate(input_number.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(+1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)

    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'convert miles km'
            on_press: app.handle_calculate(input_number.text)
        Label:
            id: output_label
            font_size: 48
            color: (1, 0.75, 0.8, 1)